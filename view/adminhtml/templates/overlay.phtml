<?php
/** @var \Siteimprove\Magento\Block\Overlay $block */
?>
<script type="text/x-magento-init">
{
    "*": {
        "siteimprove": {
            "action": "domain",
            "url": "<?= $block->escapeJs($block->getDefaultDomain()) ?>",
            "token": "<?= $block->escapeJs($block->getToken()) ?>"
        }
    }
}
