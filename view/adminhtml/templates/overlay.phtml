<script type="text/x-magento-init">
{
    "*": {
        "siteimprove": {
            "action": "recheck",
            "url": "<?= $block->escapeJs($url->getUrl()) ?>",
            "token": "<?= $block->escapeJs($block->getToken()) ?>"
        }
    }
}
</script>
<?php endforeach; ?>
